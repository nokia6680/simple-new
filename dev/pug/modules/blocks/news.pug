section.news
    h2.news__title.section-title Новости и&nbsp;мероприятия

    ul.news__list   
        for i in newsList
            li.news__item
                a(href="" +i.link target="_self").news__link
                    picture.news__frame
                        source(srcset="static/images/content/" +i.newsImage +".webp 1x, static/images/content/" +i.newsImage +"_2x.webp 2x" type="image/webp")
                        img(src="static/images/content/" +i.newsImage +"_2x.jpg" width="" height="" alt="" +i.name).news__frame-img
                    span.news__tag=i.tag
                    h3.news__name=i.name
                    time(datetime="" +datetimeFull).news__date=i.datetime
    a(href="" target="_self").news__btn.section-link Читать новости