mixin picture(type, image, width, height, name)
    picture(class="" +type)
        source(media="(min-width: 768px)" srcset="static/images/content/" +image +".webp 1x, static/images/content/" +image +"_2x.webp 2x" type="image/webp")
        source(media="(min-width: 768px)" srcset="static/images/content/" +image +".jpg")
        source(srcset="static/images/content/" +image +"-sm.webp 1x, static/images/content/" +image +"-sm_2x.webp 2x" type="image/webp")
        img(src="static/images/content/" +image +"-sm.jpg" width="" +width height="" +height alt="" +name)